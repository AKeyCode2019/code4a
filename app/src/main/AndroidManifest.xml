<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.qingyuyu.code4a">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="cn.qingyuyu.code4a.CodeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="cn.qingyuyu.code4a.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.qingyuyu.code4a.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="cn.qingyuyu.code4a.library.fileselect.FileSelectActivity"></activity>
        <activity android:name="cn.qingyuyu.code4a.FeedbackActivity"
            android:label="@string/app_name"
            ></activity>
        <activity android:name="cn.qingyuyu.code4a.SettingActivity"
            android:label="@string/setting"/>
        <activity
            android:name="cn.qingyuyu.code4a.ViewArticleActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="cn.qingyuyu.code4a.EditArticleActivity"
            android:label="@string/editarticle_name"
            ></activity>
    </application>

</manifest>
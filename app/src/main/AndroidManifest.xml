<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.atd3.code4a">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".CodeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.view.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.view.WebActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.view.SigninActivity"
            android:label="@string/action_login_in"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.view.SignupActivity"
            android:label="@string/action_sign_in"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.view.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.view.ViewArticleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".library.fileselect.FileSelectActivity" />
        <activity
            android:name=".view.view.EditArticleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.view.EggActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.view.FeedbackActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.view.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.view.SigninUserActivity"
            android:label="@string/signin_user_activity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorAccent">#FF4081</color>
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <declare-styleable name="FunGame"><attr format="color" name="left_model_color"/><attr format="color" name="middle_model_color"/><attr format="color" name="right_model_color"/></declare-styleable>
    <declare-styleable name="FunGameHeader"><attr format="enum" name="game_type">
            <enum name="hit_block" value="0"/>
            <enum name="battle_city" value="1"/>
        </attr><attr format="string" name="mask_top_text"/><attr format="string" name="mask_bottom_text"/><attr format="string" name="text_loading"/><attr format="string" name="text_loading_finished"/><attr format="string" name="text_game_over"/><attr format="integer" name="top_text_size"/><attr format="integer" name="bottom_text_size"/></declare-styleable>
    <declare-styleable name="HitBlock"><attr format="integer" name="block_horizontal_num"/><attr format="integer" name="ball_speed">
            <enum name="low" value="3"/>
            <enum name="medium" value="6"/>
            <enum name="fast" value="9"/>
        </attr></declare-styleable>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="app_name">FunGameRefresh</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>